# Model 1 Linear Regression

#Load the iris dataset
from sklearn.datasets import load_iris
data = load_iris()

X = data.data
y = data.target

# Split your data with train test split (2/3 for Train, 1/3 for Test)
from sklearn.model_selection import train_test_split
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.33, random_state=0)

#Create your Linear Regression object (or model, estimater)
from sklearn.linear_model import LinearRegression
lr = LinearRegression()
lr.fit(X_train, y_train)

#Prediction
y_hat = lr.predict(X_test)
print(y_hat[0:5])

# Calculate the R^2 (R square = The coefficient of determination: 1 is perfect prediction)
from sklearn.metrics import r2_score
lr_r2 = r2_score(y_test, y_hatln)
print('R^2 Score : ',lr_r2)
